<div class="container">
    <div class="row">
    	<div class="col-sm-4 col-sm-offset-4 text">
		    <div class="form-box">
				<div class="form-top">
		    		<div class="form-top-left">
		    			<h1>Sign up now!</h1>
		        		<p>Fill in the form below to get instant access:</p>
		    		</div>
		    		<div class="form-top-right">
		    			<i class="fa fa-pencil"></i>
		    		</div>
		        </div>
		        <div class="form-bottom">
		            <form role="form" action="" method="post" class="registration-form">
		            	<div class="form-group">
		            		<label class="sr-only" for="form-first-name">Username</label>
		                	<input type="text" name="form-first-name" placeholder="Something creative..." class="form-first-name form-control" id="form-first-name">
		                </div>
		                <div class="form-group">
		                	<label class="sr-only" for="form-email">Email</label>
		                	<input type="text" name="form-email" placeholder="Email..." class="form-email form-control" id="form-email">
		                </div>
		                <div class="form-group">
		                	<label class="sr-only" for="form-last-name">Password</label>
		                	<input type="password" name="form-last-name" placeholder="Password..." class="form-last-name form-control" id="form-last-name">
		                </div>
		                <div class="form-group">
		                	<label class="sr-only" for="form-last-name">Password Confirmation</label>
		                	<input type="password" name="form-last-name" placeholder="Password Confirmation..." class="form-last-name form-control" id="form-last-name">
		                </div>
		                <button type="submit" class="btn" ng-click="submit()">Sign me up!</button>
		            </form>
		        </div>
			</div>
		</div>
	</div>
</div>