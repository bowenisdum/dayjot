<h2>Entries</h2>
<div>
	<div ng-if="latestMonth()">
		<div class="panel panel-default" ng-repeat="entry in allEntries()[selectedMonth]">
			<div class="panel-body">
				<h3>{{entry.entry_date}}</h3>
				<div ng-if="entry.video_file_name">
					<jwplayer ng-src="{{getVideoUrl(entry)}}"
					          player-options="jwplayerOptions"
					          player-id="player-{{entry.video_file_name}}">
					</jwplayer>
				</div>
				<hr>
				<div>{{entry.body}}</div>
			</div>
		</div>
	</div>
	<div ng-if="!latestMonth()">
		<div class="panel panel-default">
			<div class="panel-body">
				<p>You do not have any entries. </p>
				<p><a class="btn btn-default" ui-sref="dashboard.new">Click here to create a new one.</a></p>
			</div>
		</div>
	</div>
</div>
